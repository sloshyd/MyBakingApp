<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="120dp"
    android:background="@drawable/border"
    android:layout_margin="8dp">


    <TextView
        android:id="@+id/instructions_list_step_label"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/instructions_list_item_tv_step_number"
        android:text="@string/label_step_number"
        android:textAlignment="center"
        android:layout_marginRight="@dimen/list_view_margin"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/instructions_list_item_tv_step_number"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textColor="@color/icons"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/instructions_list_item_tv_short_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/instructions_list_item_tv_step_number"
        android:layout_alignParentBottom="true"
        android:textSize="18sp" />


</RelativeLayout>
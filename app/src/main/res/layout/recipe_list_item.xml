<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/list_view_margin"
    style="@style/RecipeList">

    <TextView
        android:id="@+id/recipe_list_item_tv_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        style="@style/RecipeList"/>

    <LinearLayout
        android:id="@+id/recipe_list_item_serves_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@id/recipe_list_item_tv_recipe_name"
        android:gravity="right">

        <ImageView
            android:id="@+id/recipe_list_item_serves_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person_face_white_18dp"
            android:tint="@color/primary_light"/>
        <TextView
            android:id="@+id/recipe_list-item_tv_number_served"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RecipeList"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="@dimen/list_view_margin"
    android:layout_marginRight="@dimen/list_view_margin"
    android:layout_marginTop="@dimen/list_view_margin"
    android:background="@drawable/border">

    <ImageView
        android:id="@+id/recipe_list_item_iv_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/list_view_margin"
        android:src="@color/primary" />

    <TextView
        android:id="@+id/recipe_list_item_tv_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/recipe_list_item_iv_picture"
        android:gravity="center_vertical"
        android:textSize="26sp" />


    <TextView
        android:id="@+id/recipe_list_item_tv_number_served"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/primary_light"
        android:gravity="center_horizontal"
        android:textColor="@color/icons"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/recipe_list_item_serves_icon"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recipe_list_item_tv_number_served"
        android:layout_alignParentEnd="true"
        android:src="@drawable/person_face_white_18dp"
        android:tint="@color/primary_light" />


</RelativeLayout>